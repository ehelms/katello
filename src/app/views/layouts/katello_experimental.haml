= content_for(:title) do
  = project_name
  = "-"
  = default_title

= content_for(:stylesheets_block) do
  = include_stylesheets :common_experimental
  = include_stylesheets controller.section_id
  = include_stylesheets :header
  = yield :stylesheets

= content_for(:head) do
  = csrf_meta_tag
  / [if lt IE 9]
    = include_javascripts  :html5
  / [if IE]
    = include_stylesheets :ie, :embed_assets => false

= content_for(:body) do
  %article{ 'ng-app' => 'Katello' }
    = render :file => "common/menu"
    -#%section.subnav-container
      .center
        %nav.subnav#subnav
          = render_main_sub_menu
    %section.maincontent
      = yield

= content_for(:javascripts_block) do
  = include_javascripts :common_experimental
  %script{ :type => "text/javascript" }
    -if protect_against_forgery?
      :plain
        var AUTH_TOKEN = #{form_authenticity_token.inspect};
    = render :partial => "common/common_i18n"
    = render :partial => 'common/config'
    = render :partial => 'common/ajax_notices'
    = render :partial => 'common/notification'
    = yield :inline_javascript

  = yield :javascripts

= render :file => 'layouts/alchemy/layouts/_base'
